[run]
branch = True
source = 
    backend/src
    preprocessor
omit =
    */tests/*
    */__init__.py
    */.venv/*
    */migrations/*

[report]
fail_under = 50
show_missing = True
skip_covered = True
exclude_lines =
    pragma: no cover
    def __repr__
    if __name__ == "__main__":
    raise NotImplementedError
    @abc.abstractmethod
    logger\.debug
    print\(
    pass
    def spa_handler
    def serve_config

[xml]
output = coverage_reports/backend/coverage.xml

[html]
directory = coverage_reports/backend/htmlcov
